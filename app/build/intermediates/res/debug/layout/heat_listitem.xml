<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baise" >

        <LinearLayout
            android:id="@+id/items_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/items_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="2015"
                android:textColor="@color/gray18"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/items_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="07-20"
                android:textColor="@color/gray18"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/items_diliver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/items_date"
            android:orientation="vertical" >

            <TextView
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/green6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_homemeet_point" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/green6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/items_diliver"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/items_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="tittletittletittletittletittletittletittletittletittletittle"
                android:textColor="@color/gray6"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业："
                    android:textColor="@color/gray19"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/items_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="外科"
                    android:textColor="@color/gray19"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="地点："
                    android:textColor="@color/gray19"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/items_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="南京"
                    android:textColor="@color/gray19"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="点击："
                    android:textColor="@color/gray19"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/items_dianji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="1000"
                    android:textColor="@color/gray19"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/line_gray2" />

</LinearLayout><!-- From: file:/Users/shengweixing/AndroidStudioProjects/pDoctor1/app/src/main/res/layout/heat_listitem.xml -->